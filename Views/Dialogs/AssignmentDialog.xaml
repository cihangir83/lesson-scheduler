<Window x:Class="LessonScheduler.Views.Dialogs.AssignmentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ders Ataması" 
        Height="550" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    
    <Border Background="White" Margin="15" CornerRadius="8" 
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>
        
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Ders Seçimi -->
            <StackPanel Grid.Row="0">
                <Label Content="Ders:" FontWeight="Bold" FontSize="13" 
                       Foreground="#333" Margin="0,0,0,5"/>
                <ComboBox Name="LessonComboBox" 
                          FontSize="13" Height="35" Padding="10,8"
                          BorderBrush="#CCC" BorderThickness="1"/>
            </StackPanel>

            <!-- Öğretmen Seçimi -->
            <StackPanel Grid.Row="2">
                <Label Content="Öğretmen:" FontWeight="Bold" FontSize="13" 
                       Foreground="#333" Margin="0,0,0,5"/>
                <ComboBox Name="TeacherComboBox" 
                          FontSize="13" Height="35" Padding="10,8"
                          BorderBrush="#CCC" BorderThickness="1"/>
            </StackPanel>

            <!-- Toplam Saat -->
            <StackPanel Grid.Row="4">
                <Label Content="Toplam Saat:" FontWeight="Bold" FontSize="13" 
                       Foreground="#333" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox Name="TotalHoursTextBox" Width="80" Height="35"
                             FontSize="13" Padding="10,8" Text="1" 
                             TextAlignment="Center" VerticalContentAlignment="Center"
                             BorderBrush="#CCC" BorderThickness="1"/>
                    <Label Content="saat" VerticalAlignment="Center" 
                           Margin="10,0,0,0" FontSize="13" Foreground="#666"/>
                </StackPanel>
            </StackPanel>

            <!-- Blok Yapısı -->
            <GroupBox Grid.Row="6" Header="Blok Yapısı" 
                      FontWeight="Bold" FontSize="13" Foreground="#333"
                      BorderBrush="#4A90E2" BorderThickness="1.5"
                      Background="#FAFBFC">
                <StackPanel Margin="15">
                    <Label Content="Blok yapısını virgülle ayırarak girin:" 
                           FontSize="12" Foreground="#555" Margin="0,0,0,8"/>
                    
                    <TextBox Name="BlockStructureTextBox" Height="35"
                             FontSize="13" Padding="10,8" Text="1" 
                             VerticalContentAlignment="Center"
                             BorderBrush="#4A90E2" BorderThickness="1.5"/>
                    
                    <TextBlock Text="Örnek: 2,2,1 (2 saatlik 2 blok + 1 saatlik 1 blok)" 
                               FontStyle="Italic" FontSize="11" 
                               Foreground="#4A90E2" Margin="0,8,0,0"/>
                    
                    <TextBlock Text="⚠ Blok toplamı = Toplam saat olmalıdır!" 
                               FontSize="10" Foreground="#E74C3C" 
                               Margin="0,5,0,0"/>
                    
                    <TextBlock Name="ValidationMessage" 
                               FontSize="11" Foreground="#E74C3C" FontWeight="Bold"
                               Margin="0,8,0,0" Visibility="Collapsed"/>
                </StackPanel>
            </GroupBox>

            <!-- Butonlar -->
            <StackPanel Grid.Row="8" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Name="OkButton" Content="✓ Tamam" 
                        Width="90" Height="35" Margin="0,0,10,0"
                        FontSize="13" FontWeight="Bold"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0"
                        Click="OkButton_Click" IsDefault="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#45A049"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                <Button Name="CancelButton" Content="✗ İptal" 
                        Width="90" Height="35"
                        FontSize="13" FontWeight="Bold"
                        Background="#F44336" Foreground="White"
                        BorderThickness="0"
                        Click="CancelButton_Click" IsCancel="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#DA190B"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
            </Grid>
        </ScrollViewer>
    </Border>
</Window>