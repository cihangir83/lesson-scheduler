<Window x:Class="LessonScheduler.Views.Dialogs.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:ClassModifier="public"
        Title="Bilgilendirme"
        Height="420" Width="640"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">
    <Border Background="White" Margin="15" CornerRadius="8"
            BorderBrush="#E0E0E0" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect Color="Gray" Direction="315" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" Padding="24" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Akıllı Ders Dağıtım Programına Hoş Geldiniz"
                               FontSize="22" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,10"/>
                    <TextBlock Text="Kullanım Hakkında Kısa Bilgi"
                               FontSize="14" FontWeight="SemiBold" Foreground="#374151" Margin="0,0,0,14"/>

                    <StackPanel Margin="0,0,0,16">
                        <TextBlock Text="• 1. Tanımlamalar sekmesinde dersleri, öğretmenleri ve sınıfları ekleyin."
                                   FontSize="13" Margin="0,4,0,0" Foreground="#374151"/>
                        <TextBlock Text="• 2. Ders Atamaları sekmesinde öğretmen-ders ilişkilerini ve toplam saatleri belirleyin."
                                   FontSize="13" Margin="0,4,0,0" Foreground="#374151"/>
                        <TextBlock Text="• 3. Kısıtlamalar sekmesinde öğretmen uygunlukları ve okul saatlerini ayarlayın."
                                   FontSize="13" Margin="0,4,0,0" Foreground="#374151"/>
                        <TextBlock Text="• İşlemler → Dağıtımı Başlat ile otomatik çözüm üretin."
                                   FontSize="13" Margin="0,4,0,0" Foreground="#374151"/>
                        <TextBlock Text="• Sonuç sekmelerinden programları görüntüleyin ve PDF olarak dışa aktarın."
                                   FontSize="13" Margin="0,4,0,0" Foreground="#374151"/>
                    </StackPanel>

                    <Border Background="#F0F9FF" BorderBrush="#93C5FD" BorderThickness="1" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Geliştirici" FontWeight="Bold" Foreground="#1E40AF"/>
                            <TextBlock Text="Mahir Cihangir Saraç" FontSize="14" Foreground="#1E3A8A"/>
                        </StackPanel>
                    </Border>

                    <CheckBox x:Name="DontShowAgainCheck" Content="Bir daha gösterme"
                              Margin="0,14,0,0" FontSize="13"/>
                </StackPanel>
            </ScrollViewer>

            <Border Grid.Row="1" Background="#F8F9FA" Padding="12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Tamam" Width="100" Height="32"
                            Background="#4CAF50" Foreground="White" BorderThickness="0"
                            Click="Ok_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>