<Window x:Class="LessonScheduler.Views.Dialogs.TeacherStatusDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ðŸ“Š Ã–ÄŸretmen Durumu ve HaftalÄ±k Saatler" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Ã–ÄŸretmenlerin haftalÄ±k toplam saatleri ve mÃ¼saitlik durumlarÄ±" 
                   FontSize="16" 
                   FontWeight="Bold" 
                   Margin="0,0,0,15"
                   HorizontalAlignment="Center"/>

        <!-- Teacher Status List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="TeacherStatusList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Margin="0,0,0,3" 
                                Padding="5"
                                CornerRadius="3"
                                Background="White">
                            <!-- Single Row Layout -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>  <!-- Teacher Name -->
                                    <ColumnDefinition Width="60"/>   <!-- Total Hours -->
                                    <ColumnDefinition Width="70"/>   <!-- Available -->
                                    <ColumnDefinition Width="60"/>   <!-- Blocked -->
                                    <ColumnDefinition Width="*"/>    <!-- Mini Schedule -->
                                </Grid.ColumnDefinitions>

                                <!-- Teacher Info -->
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding TeacherName}" 
                                           FontSize="11" 
                                           FontWeight="Bold" 
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                                
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding TotalHours, StringFormat='{}{0} saat'}" 
                                           FontSize="10" 
                                           FontWeight="Bold" 
                                           Foreground="DarkBlue"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="2" 
                                           Text="{Binding AvailableHours, StringFormat='{}{0} mÃ¼sait'}" 
                                           FontSize="9" 
                                           Foreground="DarkGreen"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                
                                <TextBlock Grid.Column="3" 
                                           Text="{Binding BlockedHours, StringFormat='{}{0} bloklu'}" 
                                           FontSize="9" 
                                           Foreground="DarkRed"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>

                                <!-- Ultra Mini Schedule Grid -->
                                <Grid Grid.Column="4" Margin="10,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="12"/>  <!-- Header -->
                                        <RowDefinition Height="*"/>   <!-- Schedule -->
                                    </Grid.RowDefinitions>

                                    <!-- Mini Headers -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="P" FontSize="7" Width="12" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock Text="S" FontSize="7" Width="12" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock Text="Ã‡" FontSize="7" Width="12" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock Text="P" FontSize="7" Width="12" HorizontalAlignment="Center" FontWeight="Bold"/>
                                        <TextBlock Text="C" FontSize="7" Width="12" HorizontalAlignment="Center" FontWeight="Bold"/>
                                    </StackPanel>

                                    <!-- Ultra Mini Schedule -->
                                    <ItemsControl Grid.Row="1" ItemsSource="{Binding ScheduleRows}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <StackPanel Orientation="Vertical"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" Height="8" Margin="0,0,0,1">
                                                    <Border Background="{Binding MondayColor}" Width="12" Height="8" BorderBrush="Gray" BorderThickness="0.2"/>
                                                    <Border Background="{Binding TuesdayColor}" Width="12" Height="8" BorderBrush="Gray" BorderThickness="0.2"/>
                                                    <Border Background="{Binding WednesdayColor}" Width="12" Height="8" BorderBrush="Gray" BorderThickness="0.2"/>
                                                    <Border Background="{Binding ThursdayColor}" Width="12" Height="8" BorderBrush="Gray" BorderThickness="0.2"/>
                                                    <Border Background="{Binding FridayColor}" Width="12" Height="8" BorderBrush="Gray" BorderThickness="0.2"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Legend and Close Button -->
        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,15,0,0">
            <!-- Legend -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                <Border Background="LightGreen" Width="15" Height="15" Margin="0,0,5,0"/>
                <TextBlock Text="MÃ¼sait" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="12"/>
                <Border Background="LightCoral" Width="15" Height="15" Margin="0,0,5,0"/>
                <TextBlock Text="MÃ¼sait DeÄŸil" VerticalAlignment="Center" Margin="0,0,15,0" FontSize="12"/>
                <Border Background="Gray" Width="15" Height="15" Margin="0,0,5,0"/>
                <TextBlock Text="GeÃ§ersiz Saat" VerticalAlignment="Center" FontSize="12"/>
            </StackPanel>
            
            <!-- Close Button -->
            <Button Content="Kapat" 
                    Width="100" 
                    Height="35" 
                    HorizontalAlignment="Center"
                    Click="CloseButton_Click"
                    Background="LightBlue"
                    FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>