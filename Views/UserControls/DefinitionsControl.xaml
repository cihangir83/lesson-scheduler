<UserControl x:Class="LessonScheduler.Views.UserControls.DefinitionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Dersler -->
        <GroupBox Grid.Column="0" Header="📚 Dersler" Margin="10" 
                  Background="White" Foreground="Black" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Ders Listesi -->
                <ListBox Grid.Row="0" 
                         ItemsSource="{Binding Lessons}"
                         SelectedItem="{Binding SelectedLesson}"
                         Margin="10"
                         FontSize="12"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Ders Butonları -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="10">
                    <Button Content="➕ Ekle" 
                            Command="{Binding AddLessonCommand}"
                            Width="90" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#4CAF50" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="✏️ Düzenle" 
                            Command="{Binding EditLessonCommand}"
                            Width="100" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#FF9800" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="🗑️ Sil" 
                            Command="{Binding DeleteLessonCommand}"
                            Width="80" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#F44336" Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Öğretmenler -->
        <GroupBox Grid.Column="1" Header="👨‍🏫 Öğretmenler" Margin="10"
                  Background="White" Foreground="Black" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Öğretmen Listesi -->
                <ListBox Grid.Row="0" 
                         ItemsSource="{Binding Teachers}"
                         SelectedItem="{Binding SelectedTeacher}"
                         Margin="10"
                         FontSize="12"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Öğretmen Butonları -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="10">
                    <Button Content="➕ Ekle" 
                            Command="{Binding AddTeacherCommand}"
                            Width="90" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#4CAF50" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="✏️ Düzenle" 
                            Command="{Binding EditTeacherCommand}"
                            Width="100" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#FF9800" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="🗑️ Sil" 
                            Command="{Binding DeleteTeacherCommand}"
                            Width="80" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#F44336" Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- Sınıflar -->
        <GroupBox Grid.Column="2" Header="🏫 Sınıflar" Margin="10"
                  Background="White" Foreground="Black" FontWeight="Bold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Sınıf Listesi -->
                <ListBox Grid.Row="0" 
                         ItemsSource="{Binding Classes}"
                         SelectedItem="{Binding SelectedClass}"
                         Margin="10"
                         FontSize="12"
                         Background="White"
                         Foreground="Black"
                         BorderBrush="#E0E0E0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="8,4"/>
                            <Setter Property="Margin" Value="0,1"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#2196F3"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                </ListBox>

                <!-- Sınıf Butonları -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" Margin="10">
                    <Button Content="➕ Ekle" 
                            Command="{Binding AddClassCommand}"
                            Width="90" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#4CAF50" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="✏️ Düzenle" 
                            Command="{Binding EditClassCommand}"
                            Width="100" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#FF9800" Foreground="White"
                            BorderThickness="0"/>
                    <Button Content="🗑️ Sil" 
                            Command="{Binding DeleteClassCommand}"
                            Width="80" Height="40" 
                            Margin="5" FontSize="12"
                            Background="#F44336" Foreground="White"
                            BorderThickness="0"/>
                </StackPanel>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>