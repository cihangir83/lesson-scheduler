<UserControl x:Class="LessonScheduler.Views.UserControls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Header -->
            <TextBlock Text="⚙️ Okul Ayarları" FontSize="24" FontWeight="Bold" 
                       Foreground="{DynamicResource TextPrimaryBrush}" 
                       Margin="0,0,0,20"/>
            
            <!-- School Information Section -->
            <GroupBox Header="🏫 Okul Bilgileri" Margin="0,0,0,20" 
                      Style="{DynamicResource {x:Type GroupBox}}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- School Name -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Okul Adı:" 
                           VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="0" Grid.Column="1" 
                             Text="{Binding SchoolName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5" Padding="8" MaxLength="100"
                             Style="{DynamicResource {x:Type TextBox}}"/>
                    
                    <!-- Principal Name -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Müdür Adı:" 
                           VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox Grid.Row="1" Grid.Column="1" 
                             Text="{Binding PrincipalName, UpdateSourceTrigger=PropertyChanged}"
                             Margin="5" Padding="8" MaxLength="100"
                             Style="{DynamicResource {x:Type TextBox}}"/>
                    
                    <!-- Info Text -->
                    <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                               Text="💡 Bu bilgiler PDF çıktılarında görüntülenecektir. Okul adı üst kısımda, müdür adı sağ alt köşede yer alacaktır."
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontStyle="Italic" Margin="0,10,0,0" TextWrapping="Wrap"/>
                </Grid>
            </GroupBox>
            
            <!-- Daily Hours Section -->
            <GroupBox Header="📅 Günlük Ders Saati Ayarları" Margin="0,0,0,20"
                      Style="{DynamicResource {x:Type GroupBox}}">
                <StackPanel Margin="10">
                    <!-- Info Text -->
                    <TextBlock Text="💡 Her gün için farklı ders saati sayısı belirleyebilirsiniz. Örneğin Pazartesi 8 saat, diğer günler 7 saat olabilir."
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               FontStyle="Italic" Margin="0,0,0,15" TextWrapping="Wrap"/>
                    
                    <!-- Daily Hours Grid -->
                    <ItemsControl ItemsSource="{Binding DailyHours}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="{DynamicResource CardBrush}" 
                                        BorderBrush="{DynamicResource BorderBrush}" 
                                        BorderThickness="1" CornerRadius="5" 
                                        Margin="0,2" Padding="10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <!-- Day Name -->
                                        <TextBlock Grid.Column="0" Text="{Binding DayName}" 
                                                   VerticalAlignment="Center" FontWeight="SemiBold"
                                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                                        
                                        <!-- Hours Slider -->
                                        <Slider Grid.Column="1" 
                                                Value="{Binding Hours, UpdateSourceTrigger=PropertyChanged}"
                                                Minimum="{Binding MinHours}" Maximum="{Binding MaxHours}"
                                                TickFrequency="1" IsSnapToTickEnabled="True"
                                                VerticalAlignment="Center" Margin="10,0"/>
                                        
                                        <!-- Hours Display -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="{Binding Hours}" FontWeight="Bold" 
                                                       FontSize="16" Foreground="{DynamicResource AccentBrush}"/>
                                            <TextBlock Text=" saat" Margin="2,0,0,0"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </GroupBox>
            
            <!-- Action Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <!-- Unsaved Changes Indicator -->
                <TextBlock Text="⚠️ Kaydedilmemiş değişiklikler var" 
                           Foreground="Orange" FontWeight="SemiBold" 
                           VerticalAlignment="Center" Margin="0,0,20,0"
                           Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                
                <!-- Cancel Button -->
                <Button Content="❌ İptal Et" Command="{Binding CancelChangesCommand}"
                        Margin="0,0,10,0" Padding="15,8" MinWidth="100"
                        Style="{DynamicResource SecondaryButton}"/>
                
                <!-- Reset Button -->
                <Button Content="🔄 Varsayılana Sıfırla" Command="{Binding ResetToDefaultCommand}"
                        Margin="0,0,10,0" Padding="15,8" MinWidth="120"
                        Style="{DynamicResource SecondaryButton}"/>
                
                <!-- Apply Button -->
                <Button Content="✅ Uygula" Command="{Binding ApplyChangesCommand}"
                        Margin="0,0,10,0" Padding="15,8" MinWidth="100"
                        Style="{DynamicResource PrimaryButton}"/>
                
                <!-- Save Button -->
                <Button Content="💾 Kaydet" Command="{Binding SaveSettingsCommand}"
                        Padding="15,8" MinWidth="100"
                        Style="{DynamicResource PrimaryButton}"/>
            </StackPanel>
            
            <!-- Help Section -->
            <GroupBox Header="❓ Yardım" Margin="0,30,0,0"
                      Style="{DynamicResource {x:Type GroupBox}}">
                <StackPanel Margin="10">
                    <TextBlock TextWrapping="Wrap" Foreground="{DynamicResource TextSecondaryBrush}">
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Okul Adı: PDF çıktılarının üst kısmında görüntülenir."/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Müdür Adı: PDF çıktılarının sağ alt köşesinde görüntülenir."/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Günlük Saat Ayarları: Her gün için 1-10 arası saat sayısı belirleyebilirsiniz."/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Uygula: Değişiklikleri geçici olarak uygular (kaydetmez)."/>
                        <LineBreak/>
                        <Run Text="• " FontWeight="Bold"/>
                        <Run Text="Kaydet: Değişiklikleri kalıcı olarak kaydeder."/>
                    </TextBlock>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>